<div class="row g-3 align-items-end mb-4">

    <!-- Language -->
    <div class="col-auto">
        <label class="form-label fw-semibold mb-1">Language</label>
        <select id="lang" class="form-select form-select-sm">
            <option value="en">English (US)</option>
            <option value="ge">Georgian (GE)</option>
        </select>
    </div>

    <!-- Seed -->
    <div class="col-auto">
        <label class="form-label fw-semibold mb-1">Seed</label>
        <input id="seed" type="number" class="form-control form-control-sm" value="1">
    </div>

    <!-- Likes -->
    <div class="col-auto">
        <label class="form-label fw-semibold mb-1">Likes</label>

        <input id="likes"
               type="range"
               class="form-range"
               min="0" max="10" step="0.1"
               value="3.5"
               list="likes_marks"
               style="width: 180px;">

        <!-- Slider marks -->
        <datalist id="likes_marks">
            {% for i in 0..10 %}
                <option value="{{ i }}"></option>
            {% endfor %}
        </datalist>

        <!-- Current likes value -->
        <div class="small text-muted">
            Selected: <span id="likesNum" class="fw-bold">3.5</span>
        </div>
    </div>

    <!-- View Mode Buttons -->
    <div class="col-auto">
        <label class="form-label fw-semibold mb-1 d-block">View</label>
        <div class="btn-group">
            <button id="btnTable" class="btn btn-outline-primary active">
                <i class="bi bi-table"></i>
            </button>
            <button id="btnGallery" class="btn btn-outline-primary">
                <i class="bi bi-grid"></i>
            </button>
        </div>
    </div>

</div>
